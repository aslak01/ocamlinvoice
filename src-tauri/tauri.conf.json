{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InvoiceSplitter",
  "version": "0.1.0",
  "identifier": "com.splitter.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "InvoiceSplitter",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Aslak",
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Splits invoices",
    "longDescription": "A cross-platform desktop application for splitting invoices with OCaml backend processing and SQLite database storage. Features include batch processing, invoice history, and PDF preview.",
    "resources": [
      "../ocaml-backend/src/*",
      "../ocaml-backend/dune-project", 
      "../ocaml-backend/README.md",
      "../ocaml-backend/_build/default/src/main.exe"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "hardenedRuntime": false,
      "entitlements": null,
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
